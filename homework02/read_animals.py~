#!/usr/bin/env python3
import json
import random
import sys

def breed(parent1, parent2):

    parents=[]
    numbers=[]
    parents.append(parent1)
    parents.append(parent2)
    
    for i in range(5):
        value= random.randint(0,1)
        numbers.append(value)

    breed= {}
    breed['head']= parents[numbers[0]]['head']
    breed['body']= parents[numbers[1]]['body']
    breed['arms']= parents[numbers[2]]['arms']
    breed['legs']= parents[numbers[3]]['legs']
    breed['tail']= parents[numbers[4]]['tail']

    print('The parents are: ')
    print(parents)
    print('The child is: ')
    print(breed)

def main():

    with open(sys.argv[1], 'r') as f:
        animal_dict = json.load(f)

    print(breed(random.choice(animal_dict['animals']),random.choice(animal_dict['animals'])))

if __name__ == '__main__':
    main()
